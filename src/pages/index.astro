---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

import softPic from '../assets/soft.JPG'; 

const basePath = import.meta.env.BASE_URL;
---

<Layout title="Home | GitHub Pages">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:min-h-screen">
    
    <div class="flex flex-col justify-center py-16 md:py-20 px-4 md:px-8">
      
      <div class="mb-10">
        <span class="text-blue-600 dark:text-blue-400 font-medium tracking-wider block">
          HEITOR FERNANDES
        </span>

        <div class="flex items-center gap-1 mt-2 mb-4 text-gray-500 dark:text-gray-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0Z"/>
            <circle cx="12" cy="10" r="3"/>
          </svg>
          <span class="text-sm font-medium tracking-wide">Brazil</span>
        </div>
        
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white leading-tight mb-3">
          There is nothing permanent <br />
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-teal-400">
            except change.
          </span>
        </h1>
        
        <p class="text-lg text-gray-500 dark:text-gray-500 italic mb-6">
          â€” Heraclitus
        </p>

        <p class="text-lg text-gray-600 dark:text-gray-400">
          Reach out via my networks or send me an email directly.
        </p>
      </div>

      <div class="flex flex-col gap-4 max-w-md">
        
        <a 
          href="https://github.com/Heitorccf" 
          target="_blank" 
          rel="noopener noreferrer"
          class="group flex items-center p-4 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-xl hover:border-blue-500 dark:hover:border-blue-500 hover:shadow-lg hover:shadow-blue-500/10 transition-all transform hover:-translate-y-1"
        >
          <div class="p-3 bg-gray-100 dark:bg-black rounded-lg group-hover:bg-blue-50 dark:group-hover:bg-blue-900/20 transition-colors">
            <svg class="w-6 h-6 text-gray-700 dark:text-gray-300 group-hover:text-blue-600 dark:group-hover:text-blue-400" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
