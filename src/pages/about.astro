---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

import spillPic from '../assets/spill.JPG';

const basePath = import.meta.env.BASE_URL;
---

<Layout title="Sobre | GitHub Pages">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:min-h-screen">
    
    <div class="flex flex-col justify-center py-20 md:py-32 px-4 md:px-12">
      <div class="max-w-xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-8 text-gray-900 dark:text-white">
          Heitor Fernandes
        </h1>
        
        <div class="space-y-6 text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
          <p>
            I work primarily with data science and cloud infrastructure on AWS and OCI. I have a B.Sc. in IS from IFSP.
          </p>

          <p>
            I’m into art, cooking, working out, animals, mechanical keyboards, and tech hardware.
          </p>

          <p class="font-medium text-gray-900 dark:text-white">
            I value open-source principles and believe knowledge and culture should be accessible to everyone—not treated as exclusive commodities.
          </p>

          <h2 class="text-2xl font-bold mt-12 mb-6 text-gray-900 dark:text-white">Stack</h2>
          <ul class="grid grid-cols-2 gap-4 text-sm md:text-base">
            
            <li class="flex items-center p-4 bg-gray-50 dark:bg-gray-800/50 rounded-lg border border-gray-200 dark:border-gray-700 font-medium">
              <span class="w-2 h-2 bg-orange-500 rounded-full mr-3 shrink-0"></span> 
              Cloud (AWS | OCI | GCP)
            </li>

            <li class="flex items-center p-4 bg-gray-50 dark:bg-gray-800/50 rounded-lg border border-gray-200 dark:border-gray-700 font-medium">
              <span class="w-2 h-2 bg-blue-500 rounded-full mr-3 shrink-0"></span> 
              Python & SQL
            </li>

            <li class="flex items-center p-4 bg-gray-50 dark:bg-gray-800/50 rounded-lg border border-gray-200 dark:border-gray-700 font-medium">
              <span class="w-2 h-2 bg-green-500 rounded-full mr-3 shrink-0"></span> 
              Data Science
            </li>

            <li class="flex items-center p-4 bg-gray-50 dark:bg-gray-800/50 rounded-lg border border-gray-200 dark:border-gray-700 font-medium">
              <span class="w-2 h-2 bg-purple-500 rounded-full mr-3 shrink-0"></span> 
              ETL Pipelines
            </li>

            <li class="flex items-center p-4 bg-gray-50 dark:bg-gray-800/50 rounded-lg border border-gray-200 dark:border-gray-700 font-medium">
              <span class="w-2 h-2 bg-indigo-500 rounded-full mr-3 shrink-0"></span> 
              Machine Learning & AI
            </li>

            <li class="flex items-center p-4 bg-gray-50 dark:bg-gray-800/50 rounded-lg border border-gray-200 dark:border-gray-700 font-medium">
              <span class="w-2 h-2 bg-yellow-500 rounded-full mr-3 shrink-0"></span> 
              Power BI
            </li>
          </ul>

          <div class="mt-12">
            <a 
              href={`${basePath}/archive`} 
              class="inline-flex items-center text-blue-600 dark:text-blue-400 font-bold hover:underline"
            >
              Certifications and open-source contributions
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>

        </div>
      </div>
    </div>

    <div class="hidden md:flex md:sticky md:top-16 md:h-[calc(100vh-4rem)] items-center justify-center p-8 overflow-hidden bg-gray-50/50 dark:bg-black/50 border-l border-gray-100 dark:border-gray-800">
      <Image 
        src={spillPic} 
        alt="Abstract vertical photo" 
        width={800} 
        height={1200}
        quality="high"
        class="w-auto h-full max-h-[80vh] object-contain rounded-2xl shadow-xl shadow-black/5 dark:shadow-black/30"
        loading="eager" 
      />
    </div>

  </div>
</Layout>