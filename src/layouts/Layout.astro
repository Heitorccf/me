---
import '../styles/global.css';
import ThemeToggle from '../components/ThemeToggle.svelte';
import themeScript from '../scripts/theme.js?raw';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Portf√≥lio de Desenvolvedor Web" } = Astro.props;
const basePath = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="pt-br" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${basePath}/favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <script is:inline set:html={themeScript} />
  </head>
  
  <body class="bg-white dark:bg-black text-gray-900 dark:text-gray-300 flex flex-col min-h-screen transition-colors duration-300">
    
    <header class="border-b border-gray-200 dark:border-gray-800 sticky top-0 bg-white/80 dark:bg-black/90 backdrop-blur-md z-50 transition-colors duration-300">
      <nav class="container mx-auto px-4 h-16 relative flex items-center justify-center">
        
        <ul class="flex gap-8 text-sm font-medium">
          <li>
            <a href={`${basePath}/`} class="hover:text-blue-600 transition-colors">Home</a>
          </li>
          <li>
            <a href={`${basePath}/about`} class="hover:text-blue-600 transition-colors">About</a>
          </li>
          <li>
            <a href={`${basePath}/archive`} class="hover:text-blue-600 transition-colors">Archive</a>
          </li>
        </ul>

        <div class="absolute right-4 flex items-center">
          <ThemeToggle client:idle />
        </div>

      </nav>
    </header>

    <main class="container mx-auto px-4 py-8 flex-grow">
      <slot />
    </main>

    <footer class="border-t border-gray-200 dark:border-gray-800 py-6 mt-auto transition-colors duration-300">
      <div class="container mx-auto px-4 text-center text-sm text-gray-500 dark:text-gray-400">
        <p>
          <span class="inline-block transform rotate-180" aria-label="Copyleft">&copy;</span> 
          {new Date().getFullYear()} Heitor Fernandes. No rights reserved.
        </p>
      </div>
    </footer>

  </body>
</html>